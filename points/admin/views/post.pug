block content
    form(method="POST" action=`/backoffice/posts/${post.id}?${query}`)

      input#postId(value=post.id type="hidden")
      // Exmaple
      .row
        .col-md-6
          .form-group
            label.control-label(for='adType') Ad type
            select#status.form-control(name='adType')
              each adType in ['pronajem', 'spolubydleni', 'prodej']
                if (post.adType === adType)
                  option(value=adType selected)=adType
                else
                  option(value=adType)=adType
        // Status
        .col-md-6
          .form-group
            label.control-label(for='status') Status
            select#status.form-control(name='status')
              each status in ['open', 'applied', 'rejected']
                if (post.status === status)
                  option(value=status selected)=status
                else
                  option(value=status)=status
        // Text input
      .row
        .col-md-6
          .form-group
            label.control-label(for='date') Preferred Date
            input#date.form-control.input-md(name='date', type='text', placeholder='Preferred Date')
        // Select Basic
        .col-md-6
          .form-group
            label.control-label(for='time') Preferred Time
            input.form-control(list="browsers" name="browser")
            datalist#browsers
              option(value="Internet Explorer")
              option(value="Firefox")
              option(value="Chrome")
              option(value="Opera")
              option(value="Safari")
      // Select Basic
      .row
        .col-md-6
          .form-group
            label.control-label(for='appointmentfor') Appointment For
            select#appointmentfor.form-control(name='appointmentfor')
              option(value='Service#1') Service#1
              option(value='Service#2') Service#2
              option(value='Service#3') Service#3
              option(value='Service#4') Service#4
      // Button
      .row
        .col-md-8
          .form-group
            button#singlebutton.btn.btn-default(name='singlebutton' type="button") Make An Appointment
    // form end

    script.
      $(document).ready(function() {

        const postId = $('#postId').val();

        //- set handler of submit
        $('#singlebutton').on('click', function() {
          const data = { postId };
          //- send data by ajax
          $.post(`/backoffice/posts/${postId}`, data, function(result){
            console.log(result);
          });
        });

      });
